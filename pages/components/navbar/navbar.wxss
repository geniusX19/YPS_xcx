/* pages/components/navbar/navbar.wxss */
.navbar {
  width: 100%;
  overflow: hidden;
  position: relative;
  background-color: #41BA53;
  top: 0;
  left: 0;
  z-index: 10;
}


.navbar-title-body{
  display: flex;
  justify-content: center;
  align-items: center;
}


.navbar-title {
  width: 100%;
  height: 46px;
  line-height: 46px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-size: 18px;
}

.navbar-img{
  width: 12.5px;
  height: 21px;
}

.navbar-action-wrap{
  position: absolute;
  left: 15px;
  bottom: 7px;
  z-index: 100;
  line-height: 1;
  padding-top: 4px;
  padding-bottom: 4px;
}

