/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


page {
  height: 100%;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
  overflow: hidden;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
}

/* 顶部背景 */

.index_bg{
  width: 100%;
  height: 307rpx;
  position: absolute;
  z-index: -1
}

/* 顶部搜索栏属性 */

.search{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.address{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  font-size: 24rpx;
  color: white;
  width: 30%
}

.address image {
  width: 21rpx;
  height: 26rpx;
}

.address text {
  margin-left: 10rpx;
  width: 130rpx;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

#detail-search {
  font-size: 24rpx;
  margin-right: 20rpx;
  background: #3aa74b;
  padding-left: 50rpx;
  padding-right: 30rpx;
  border-radius: 32px;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 64rpx; 
  width: 530rpx;
}

#detail-search  image{
  margin-right:15rpx;
  width: 38rpx;
  height: 38rpx;
}

/* 轮播图属性 */

.carousel{
  margin-top: 20rpx;
}

.carousel_item{
  width: 92%;
  height: 300rpx;
  margin: 0 auto;
  border-radius: 30rpx;
  box-shadow: 0 10rpx 25rpx #90dd9c
}

.carousel_item image{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}

/* 分类列表属性 */

.category{
  margin-top: 26rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 23rpx;
  overflow: hidden;
}
.category-scroll{
  width: 100%;
  white-space: nowrap;
  font-size: 0;
}
.category_item{
  display: inline-block;
  margin-right: 50rpx;
  width: 102rpx;
  text-align: center;
}
.category_item:last-child{
  margin-right: 0;
}
.category_item view{
  width: 100%;
  font-size: 22rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 50rpx;
}

.category image{
  width: 102rpx;
  height: 108rpx;
}

.category text{
  font-size: 20rpx;
}

