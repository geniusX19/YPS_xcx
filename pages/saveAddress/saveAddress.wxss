/* 保存按钮 */

.add-address {
  margin: 0 auto;
  margin-top: 30px;
  margin-bottom: 50rpx;
  width: 600rpx;
  height: 88rpx;
  border-radius: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: white;
  display: block;
  background-color: #41BA53;
  font-size: 30rpx;
}

.add-img {
  margin-right: 15rpx;
  margin-top: 10rpx;
  width: 15px;
  height: 15px;
}