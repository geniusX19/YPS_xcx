/* pages/addresses/addresses.wxss */

page {
  height: 100%;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
  overflow: hidden;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
}


/* 地址管理框 */


page {
  background-color: #ededee;
}

.tips{
  width: 750rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}

.address{
  width: 690rpx;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.address_top{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.address_top_left{
  width: 420rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 6  00;
  color: #333333;
}

.address_top_left_name{
  width: 200rpx;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.address_top_right{
  width: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  font-size: 20rpx;
  color: #999999;
}

.address_top_right image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.address_content{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size: 26rpx;
  color: #666666;
}

.address_buttom{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 20rpx;
  color: #999999;
}

.address_buttom_left{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.address_buttom_right{
  width: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.tip {
  display: inline-block;
  border: 1rpx solid #41BA53;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  font-size: 25rpx;
  text-align: center;
  line-height: 30rpx;
  color: white;
}

/* 按钮 */

.add-address {
  margin: 0 auto;
  margin-top: 30px;
  margin-bottom: 50rpx;
  width: 600rpx;
  height: 88rpx;
  border-radius: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: white;
  display: block;
  background-color: #41BA53;
  font-size: 30rpx;
}

.add-img {
  margin-right: 15rpx;
  margin-top: 10rpx;
  width: 15px;
  height: 15px;
}

.top {
  height: 130rpx;
  margin-bottom: 5%;
}

.backstyle {
  font-family: "宋体";
  font-size: 35rpx;
  font-weight: bold;
  position: absolute;
  top: 5%;
}

.address {
  width: 90%;
  background-color: white;
  margin: 30rpx auto;
  padding: 20rpx;
  border-radius: 20rpx;
}
