}

.product_infos_price_item{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #E05E2C;
}

.product_infos_price_item_left{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.product_infos_price_item_left image{
  width: 26rpx;
  height: 26rpx;
}

.product_infos_price_item_right{
  display: flex;
  justify-content: center;
  align-items: center;
}

.product_infos_price_item_right image{
  width: 44rpx;
  height: 44rpx;
  padding-right: 20rpx;
}

.clearBtn{
  background-color: #999;
  width: 200rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 58rpx;
  margin: 18rpx auto 0 auto;
  letter-spacing: 4rpx;
  color: #fff;
}



