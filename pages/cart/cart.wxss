/* 顶部公用组件 */

page {
  height: 100%;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  background-color: #ededee;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
  overflow: hidden;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
}

/* 购物车车辆清单 */

.null_cart{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
}

.null_cart_top image{
  width: 201rpx;
  height: 200rpx;
  margin: 30rpx;
}

.null_cart_top view{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #bfbfbf;
}

.null_cart_buttom{
  width: 400rpx;
  height: 60rpx;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: white;
  background-color: #41BA53;
  border-radius: 30rpx;
}

.cart{
  width: 630rpx;
  height: 200rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.cart_check{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-right: 20rpx;
}

.cart_check image{
  width: 44rpx;
  height: 44rpx;
}

.cart_img{
  display: flex;
  align-items: center;
  justify-content: center;

}

.cart_img image{
  width: 150rpx;
  height: 150rpx;
}

.cart_content{
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  flex: 1;
  height: 150rpx;
  padding-left: 20rpx;

}

.cart_content_tit{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  width: 100%;
}

.cart_content_tit view{
  width: 330rpx;
  display: inline-block;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.cart_content_tit image{
  width: 28rpx;
  height: 30rpx;
}

.cart_content_price{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
  height: 150rpx;
}

.cart_content_operation{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.cart_content_operation image{
  width: 44rpx;
  height: 44rpx;
}

.cart_content_operation text{
  margin: 0 15rpx;
  font-size: 30rpx;
}

/* 底部导航栏 */

.button{
  width: 750rpx;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: fixed;
  bottom: 0;
}

.future{
  width: 30%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.future image{
  width: 44rpx;
  height: 44rpx;
}

.future text{
  margin-left: 30rpx;
}

.combined{
  width: 30%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.topay{
  width: 40%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: white;
  background-color: #41BA53;
}