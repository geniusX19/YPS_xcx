/**app.wxss**/

@import "/utils/iconfont.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 登录授权 */

.login_mask {
    background: rgba(0, 0, 0, 0.4);
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1996;
    display: flex;
    align-items: center;
}
 
.login_main {
    width: 542rpx;
    height: 560rpx;
    background: #f8f8f9;
    margin: 0 auto;
    /* margin-top: 100rpx; */
    border-radius: 30rpx;
    position: relative;
    text-align: center;
}
 
.login_main .icon-guanbi {
    position: absolute;
    right: 40rpx;
    top: 40rpx;
    z-index: 88;
    font-size: 40rpx;
}
 
.login_main .logo {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin: 42rpx 0 20rpx 0;
}
 
.login_main .title {
    font-size: 28rpx;
    color: #00274b;
}

.submit {
    width: 390rpx;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 44rpx;
    /* background: #93d6f8; */
    background:#41ba53; 
    color: #fff;
    font-size: 34rpx;
}